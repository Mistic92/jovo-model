{
    "name": "jovo-model-rasa",
    "version": "0.1.0",
    "description": "Jovo Model for Rasa",
    "main": "dist/src/index",
    "types": "dist/src/index.d.ts",
    "scripts": {
        "build": "gulp && tsc",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "tsc": "tsc",
        "tscw": "tsc --watch",
        "test": "jest",
        "rimraf": "rimraf ./dist"
    },
    "files": [
        "dist"
    ],
    "author": "jovotech",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/jest": "^23.3.5",
        "@types/node": "^10.10.1",
        "@types/tv4": "^1.2.29",
        "gulp": "^4.0.0",
        "jest": "^23.6.0",
        "rimraf": "^2.6.2",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3",
        "typescript-json-schema": "^0.34.0"
    },
    "dependencies": {
        "jovo-config": "^0.1.0",
        "jovo-model-core": "^0.1.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testURL": "http://localhost/",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    }
}
